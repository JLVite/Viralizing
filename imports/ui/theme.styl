.panel-group-simple,
.panel-group-white {
  .panel-default {
    border-color: rgba(0, 0, 0, 0);

    .panel-heading {
      background: none;
      border-color: rgba(0, 0, 0, 0);

      h4.panel-title {
        font-weight: 100;
        text-shadow: none;

        & > a {
          width: 100%;
          display: inline-block;
          cursor: pointer;

          &:hover,
          &:focus,
          &:active {
            text-decoration: none;
          }
        }
      }
    }
  }
}

.dropdown-item {
  a {
    color: #76838f;
  }
}

.nav-item {
  a {
    &:hover,
    &:focus,
    &:active {
      text-decoration: none;
    }
  }

  &.no-caret {
    .dropdown-toggle::after {
      display: none;
    }
  }

  &.navbar-avatar {
    a {
      padding-top: 1.286rem;
      padding-bottom: 1.286rem;
    }
  }

  & > a {
    position: relative;
    overflow: hidden;
    padding: .715rem 1.072rem;
  }
}

tooltip-back = rgba(49, 49, 49, 0.85);

.tooltip-inner {
  background: tooltip-back;
}

.tooltip.right .tooltip-arrow {
  border-right-color: tooltip-back;
}

.tooltip.left .tooltip-arrow {
  border-left-color: tooltip-back;
}

.tooltip.top .tooltip-arrow {
  border-top-color: tooltip-back;
}

.tooltip.bottom .tooltip-arrow {
  border-bottom-color: tooltip-back;
}

.form-control:focus,
select:focus {
  border-color: #62a8ea;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(98, 168, 234, 0.75);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(98, 168, 234, 0.75);
}
