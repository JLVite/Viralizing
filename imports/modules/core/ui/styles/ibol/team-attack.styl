.influencer-filter {

  .influencer-list {
    overflow: auto;

    .team-attack-profile {
      color: #676767;
      padding: 20px;
      text-align: left;

      .selected {
        position: absolute;
        color: Color-Dark-Gray;
        background: #fff;
        z-index: 9;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        font-size: 23px;
        line-height: 34px;
        text-align: center;
        right: -10px;
        top: -10px;
        display: none;
      }

      &.active {
        .selected {
          display: block;
        }
      }

      .header {
        display: block;
        position: relative;

        .avatar {
          display: inline-block;
          width: 50px;
          margin-right: 14px;

          i {
            width: 20px;
            height: 20px;
            line-height: 18px;
            font-size: 12px;
          }
        }

        .content {
          display: inline-block;

          .title {
            font-size: 1.1em;
          }

          .location {
            font-size: 0.85em
          }
        }

        .view-profile {
          position: absolute;
          right: 0;
          top: 50%;
          height: 30px;
          background: #fff;
          font-size: 20px;
          border-radius: 50%;
          width: 30px;
          text-align: center;
          cursor: pointer;
          transform: translateY(-15px);
        }
      }

      .content {
        display: flex;
        margin-top: 12px;

        .cost {
          display: inline-block;
          background: #fff;
          width: 40%;
          text-align: center;
          padding: 5px;

          .label {
            font-size: 0.85em;
            color: #676767;
            white-space: inherit;
            padding: 0;
          }

          .price {
            font-size: 1.1em
          }
        }

        .followers {
          display: inline-block;
          width: 60%;
          padding: 5px;
          display: inline-flex;
          justify-content: space-evenly;
          align-items: center;

          .content {
            display: inline-block;
            text-align: center;
            margin: 0;

            .count {
              font-size: 1.1em
            }

            .label {
              font-size: 0.85em;
              color: #676767;
              padding: 0;
            }
          }

          .icon {
            display: inline-block;
            width: 40px;
            height: 40px;
            font-size: 25px;
            text-align: center;
            bottom: 10px;

          }
        }
      }

      .more {
        text-align: center;
        width: 100%;
        margin-top: 10px;
        margin-bottom: -8px;

        i {
          margin-left: 5px;
          transition: all 0.3s ease-in-out;
        }

        &.expanded {
          margin-bottom: 5px;

          i {
            transform: rotate(180deg);
          }
        }
      }

      .extra {
        margin-top: 10px;

        .price-table {
          width: 100%;
          font-size: 0.9em;

          tr {
            background: #fff;
            border-bottom: 8px solid #f8f8f8;

            td:last-child {
              text-align: right;
            }

            td {
              padding: 6px 8px;
            }
          }
        }
      }
    }

    .controls {
      margin-bottom: 20px;

      ul {
        list-style: none;

        li {
          display: inline-block;
          cursor: pointer;
          font-size: 1.3rem;
          height: 2.573rem;
          padding: 0.35rem 15px;
          margin-left: 10px;
        }
      }
    }

    .list-table {
      tr {
        cursor: pointer;

        &.active {
          background: Color-Clear-Gray;
        }

        .icon {
          width: 50px;
          height: 50px;
          font-size: 30px;

          i {
            line-height: 50px;
          }
        }

        th {
          font-weight: 600;
          text-align: center;

          &.tl {
            text-align: left;
            border-left: 3px solid #526069;
            padding-left: 15px;
          }
        }

        td {
          text-align: center;
          vertical-align: middle;
        }
      }
    }
  }

  .loading-screen {
    float: left;
    height: 413px;
    width: 66.66666666%;

  }

  .no-results {
    float: left;
    height: 413px;
    width: 66.66666666%;
    display: table;

    .content {
      display: table-cell;
      vertical-align: middle;
      text-align: center;

      i {
        font-size: 6em
      }

      h3 {
        font-size: 1.4em;
      }
    }
  }
}

.teamAttack-form {
  .team-list {
    .form-control {
      padding: 0;
      height: auto;
      line-height: inherit;
    }

    .social-avatar {
      height: 50px;
      margin-right: 13px;
    }

    .more {
      display: inline-block;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: Color-Clear-Gray;
      color: Color-Gray;
      text-align: center;
      line-height: 50px;
      font-size: 55px;
      font-weight: 300;
      transform: translateY(15px);
      cursor: pointer;
    }
  }
}

.social-networks-input {
  display: flex;
  justify-content: center;
}