.ibol-calendar {
  width: 100% !important;
  .Cal__Day__month{
    top: 0 !important;
  }

  .Cal__Day__selection .Cal__Day__month{
      top: 10px !important;
    }

  .Cal__Day__root.Cal__Day__selected .Cal__Day__selection{
    background-color: #c28c58 !important;
  }

  .Cal__MonthList__root{
    text-align: left;
  }

  .Cal__Header__root {
    padding: 4px;
    background-color: Color-Dark-Gray !important;
    font-family: 'Raleway', sans-serif;
    border-radius: 0;

    .Cal__Header__wrapper {
      height: 20px;
    }

    .Cal__Header__dateWrapper.Cal__Header__year {
      height: 21px;
      font-size: 15px;
      display: none;
    }

    .Cal__Header__dateWrapper.Cal__Header__day {
      font-size: 15px;
      line-height: 18px;
    }
  }

  .Cal__Container__wrapper {
    .Cal__Weekdays__root {
      background-color: #fff !important;
      color: Color-Dark-Gray !important;
      font-family: 'Raleway', sans-serif;

      .Cal__Weekdays__day {
        padding: 5px 0 !important;
        font-size: 0.9em;
      }
    }

    .Cal__Container__listWrapper {
      border: 3px solid Color-Dark-Gray;

      .Cal__Today__root {
        background: Color-Dark-Gray !important;
        font-size: 11px;
        padding: 0;
        height: 26px;
        font-family: 'Raleway', sans-serif;

      }

      .Cal__List__root {
        height: 220px !important;
        font-family: 'Raleway', sans-serif;

        .Cal__Day__root.Cal__Day__selected .Cal__Day__selection {
          background-color: Color-Copper !important;
          width: 32px;
          height: 32px;
          margin-top: -16px;
          margin-left: -16px;
          line-height: 32px;

          .Cal__Day__day {
            position: relative;
            top: 0;
            font-weight: 400;
            font-size: 1.1em;
          }

          .Cal__Day__month {
            color: #fff;
            background: Color-Copper !important;
            display: none;
            width: 32px;
            height: 32px;
            top: 0 !important;
            z-index: 1;
            border-radius: 50%;
            line-height: 32px;
            font-weight: 600;
            font-size: 12px;
          }

          &:hover {
            .Cal__Day__month {
              display: block;
            }
          }
        }

        .Cal__Month__rows {
          text-align: left;
          background: none !important;
          line-height: 32px !important;

          .Cal__Month__row {
            height: 32px !important;

            .Cal__Day__root {
              font-size: 1em;
              height: 100%;
              padding: 0;
              line-height: 32px;

              &.Cal__Day__today {
                color: Color-Copper !important;

                &:before {
                  width: 24px;
                  margin-left: -12px;
                  height: 1px;
                  bottom: 2px;
                  top: inherit;
                  border-radius: 0;
                  background: #c28c58 !important;
                }
              }

              .Cal__Day__month {
                top: -6px;
                background: #fff;
              }

              &.Cal__Day__enabled.Cal__Day__highlighted:before,
              &.Cal__Day__enabled:active:before,
              &.Cal__Day__enabled:hover:before {
                width: 32px;
                height: 32px;
                margin-top: -16px;
                margin-left: -16px;
              }
            }
          }
        }
      }
    }
  }
}
