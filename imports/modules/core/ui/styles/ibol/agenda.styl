.post-create {
  min-height: 268px;
 
  .panel {
    margin-bottom: 0 !important;
  }

  .post-write {
    text-align: left;
    position: relative;

    .form-input {
      position: relative;

      .counter {
        position: absolute;
        right: 3px;
        bottom: 20px;

        &.exceeded {
          color: Color-Red;
        }
      }
    }

    textarea {
      width: 80%;
      height: 173px;
      background: none;
      border: none;
      resize: none;
    }

    .controls {
      padding: 0;
      margin: 0;

      li {
        list-style: none;
        display: inline-block;
        cursor: pointer;
        font-size: 24px;
        margin: 6px;
        color: Color-Dark-Gray;

        &:hover,
        &:focus,
        &.active {
          color: Color-Copper;
        }
      }
    }

    .image {
      width: 20%;
      transition: all 0.7s ease-in-out;
      border: 6px solid #fff;
      opacity: 0;
      position: absolute;
      right: 0;

      &.on {
        opacity: 1;
      }

      img {
        width: 100%;
      }
    }
  }


  .post-account {
    height: 228px;
    overflow: auto;

    .search {
      text-align: left;
      margin-bottom: 10px;
      display: flex;

      .icon {
        font-size: 1.4em;
        transform: translateY(0.3em);
        margin-right: 10px;
        opacity: 0.8;
      }

      input {
        background: none;
        border: none;
        padding: 5px;
      }
    }

    ul {
      margin-bottom: 0 !important;

      li {
        text-align: left;

        .social-avatar {
          margin-right: 10px;
        }
      }

      &.selected {
        li {
          .social-avatar {
            &::before {
              content: " ";
              background: Color-White;
              position: absolute;
              width: 20px;
              height: 20px;
              border-radius: 50%;
              top: -2px;
              left: -2px;
            }

            &::after {
              content: 'ï†’';
              font-family: 'Web Icons';
              font-weight: normal;
              font-style: normal;
              display: inline-block;
              -webkit-transform: translate(0, 0);
              -ms-transform: translate(0, 0);
              -o-transform: translate(0, 0);
              transform: translate(0, 0);
              text-rendering: auto;
              speak: none;
              -webkit-font-smoothing: antialiased;
              -moz-osx-font-smoothing: grayscale;
              position: absolute;
              left: 1px;
              top: -2px;
              font-size: 14px;
            }

          }
        }
      }
    }
  }


  .panel-modal {
    background: #fff;
    position: absolute !important;
    top: 0;
    width: 100%;
    left: 0;
    z-index: 2;
    display: none;


    &.open {
      display: block;
      min-height: 355px;
      max-height: 800px;
    }
  }


  .date-panel {
    .date-controls {
      .time_picker_container {
        margin-bottom: 10px;

        .time_picker_modal_container {
          top: 30px;
          margin-left: 8px;
          width: 98%;
        }
      }

      p {
        margin-bottom: 5px;
      }

      .time-zone {
        background: #fff;
        margin: 10px 0;
        padding: 6px;
        
      }

      .btn {
        margin-top: 10px;
      }
    }
  }


  .location-panel {
    height: 388px;
  }

  .preview-panel {
    overflow: auto;
    padding: 20px;

    .tab-content {
      margin-top: 30px;

      .tab-pane {
        & > div {
          width: 550px;
          margin: auto;
        }
      }

      .network {
        display: none;
      }
    }
  }

  .upload-progress {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;

    .progress-bar {
      width: 100%;
      background: none !important;
      transition: 0.7s all ease-in-out;
      transition-delay: 0.7s;

      &.done {
        opacity: 0;
      }

      .bar {
        background: Color-Copper;
        transition: 0.7s all ease-in-out;
        height: 8px;
      }
    }
  }

  .panel, .panel-body, .col-xs-1, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6, .col-xs-7, .col-xs-8, .col-xs-9, .col-xs-10, .col-xs-11, .col-xs-12, .col-sm-1, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-10, .col-sm-11, .col-sm-12, .col-md-1, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-md-10, .col-md-11, .col-md-12, .col-lg-1, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-lg-10, .col-lg-11, .col-lg-12, .col-xl-1, .col-xl-2, .col-xl-3, .col-xl-4, .col-xl-5, .col-xl-6, .col-xl-7, .col-xl-8, .col-xl-9, .col-xl-10, .col-xl-11, .col-xl-12, .col-xxl-1, .col-xxl-2, .col-xxl-3, .col-xxl-4, .col-xxl-5, .col-xxl-6, .col-xxl-7, .col-xxl-8, .col-xxl-9, .col-xxl-10, .col-xxl-11, .col-xxl-12 {
