@require 'variables.styl'

.nav-tabs {
  border-bottom: none;
  background: Color-Black;

  li {
    a {
      color: #fff;
      border-radius: 0;

      i {
        background: Color-Gray;
        color: Color-Black;
        cursor: pointer;
        border-radius: 50%;
        margin-left: 11px;
        opacity: 1;
        font-size: 11px !important;
        width: 16px;
        text-align: center;
        line-height: 16px;
        height: 16px;
        padding: 0;
        margin-top: 2px;
      }
    }

    &.active {
      a {
        background: Color-Gray;
        border-color: Color-Gray;
        color: Color-Black;
        position: relative;

        i {
          background: Color-Black;
          color: Color-Gray;
        }

        &::before {
          content: ' ';
          background: Color-Copper;
          width: 70%;
          height: 2px;
          position: absolute;
          bottom: 6px;
          left: 15%;
        }
      }
    }
  }
}


.clear-tabs {
  .nav-tabs {
    border-bottom: 1px solid Color-White;
    background: Color-White;
    color: Color-Gray-Letter;
    text-align: center;

    li {
      float: inherit;
      display: inline-block;

      a {
        color: Color-Gray-Letter;
        border-radius: 0;
      }

      &.active {
        a {
          background: Color-White;
          border-color: Color-White;
          color: Color-Gray-Letter;
        }
      }
    }
  }
}


.ibol-tabs {
  .add-tab {
    float: right;
    border: none;
    background: none;
    padding: 9px 12px;
  }

  .nav-tabs {
    background: none;
    margin-bottom: 8px;

    li {
      &:last-child {
        a {
          border-right: none;
        }
      }

      a {
        color #76838f;
        padding: 0px 10px;
        border: none;
        border-right: 1px solid #76838f;
      }

      &.active {
        a {
          background: none;
          color: #efd600

          &:before {
            display: none;
          }
        }
      }
    }

  }
}

.advertising-tabs {
  .nav-tabs {
    background: Color-White;
    color: Color-Gray-Letter;
    border: 2px solid Color-Soft-Gray;
    border-left: none;
    border-right: none;
    margin: 0 -20px;
    padding: 0 20px;
    margin-bottom: 20px;

    li {
      float: inherit;
      display: inline-block;
      margin-bottom: 0;

      a {
        color: Color-Gray-Letter;
        border-radius: 0;
      }

      &.active {
        a {
          background: Color-White;
          border-color: Color-White;
          color: Color-Gray-Letter;
        }
      }
    }
  }
}


.search-tabs {
  .nav-tabs {
    background: Color-White;
    color: Color-Gray-Letter;
    border: 2px solid Color-Soft-Gray;
    border-left: none;
    border-right: none;
    margin: 0 -20px;
    padding: 0 20px;
    margin-bottom: 20px;

    li {
      float: inherit;
      display: inline-block;
      margin-bottom: 0;

      a {
        color: Color-Gray-Letter;
        border-radius: 0;
        text-transform: capitalize;
      }

      &.active {
        a {
          background: Color-White;
          border-color: Color-White;
          color: Color-Gray-Letter;
        }
      }
    }
  }
}
