.social-networks-input {
  .profile-list {
    margin-bottom: 25px;
    margin-top: 20px;

    li {
      position: relative;
      margin: 7px 9px;
      width: 50px;
      height: 50px;
      font-size: 28px;
      filter: grayscale(100%);
      opacity: 0.7;
      transition: all 0.3s ease-in-out;

      &.active {
        opacity: 1 !important;
        filter: grayscale(0%) !important;
      }

      .social-icon {
        line-height: 52px;
      }

      .selected {
        position: absolute;
        color: Color-Dark-Gray;
        background: #fff;
        z-index: 9;
        border-radius: 50%;
        width: 16px;
        height: 16px;
        font-size: 12px;
        line-height: 19px;
        text-align: center;
        right: -4px;
        top: 0;
        opacity: 0;
        transition: all 0.3s ease-in-out;
        display: none;
      }

      &.active {
        .selected {
          opacity: 1;
        }
      }
    }
  }
}

