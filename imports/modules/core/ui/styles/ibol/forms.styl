    background: Color-Clear-Gray !important;
    border-color: Color-Clear-Gray !important;
    box-shadow: none !important;
    height: 2.573rem !important;
  }

  .flag-dropdown {
    border: none !important;
    background: Color-Clear-Gray !important;
    transform: translateY(-1.286rem);
    border: none;
    position: inherit !important;

    .selected-flag {
      height: 100% !important;
    }

    .arrow {
      color: Color-Gray-Letter !important;
    }

    &:hover {
      background: Color-Copper !important;
    }
  }

  .country-list {
    width: 100% !important;
    top: 1.286rem;
    box-shadow: none !important;
    border-color: #f3f1f1 !important;
    border-top: none;
    background: #f8f8f8;
    margin-left: 0;

    .country {
      padding: 8px 10px !important;

      &:hover,
      &.highlight {
        background: Color-Copper !important;
        color: #fff !important;

        .dial-code {
          color: #fff;
        }
      }
    }
  }
}

.geosuggest {
  .geosuggest__input {
    background: Color-Clear-Gray !important;
    border-color: Color-Clear-Gray !important;
    outline: none !important;

    font-size: 1rem;
    line-height: 1.571429;
    display: block;
    width: 100%;
    padding: .429rem 1.072rem;
    color: #76838f;
    border-radius: .215rem;
    background-color: #fff;
    background-image: none;

    height: 2.573rem;
    -webkit-transition: -webkit-box-shadow .25s linear, border .25s linear, color .25s linear, background-color .25s linear;
    -o-transition: box-shadow .25s linear, border .25s linear, color .25s linear, background-color .25s linear;
    transition: box-shadow .25s linear, border .25s linear, color .25s linear, background-color .25s linear;
    -webkit-box-shadow: none;
    box-shadow: none;
    -webkit-appearance: none;
    -moz-appearance: none;
  }

  .geosuggest__suggests-wrapper {
    background: rgb(248, 248, 248) !important;
    border: 1px solid #f0f0f0;
    text-align: left;
    position: absolute;
    z-index: 999;
    width: 100%;
    border-top: none;
    border-radius: 0 0 4px 4px;
    margin-top: -3px;
    padding-top: 2px;

    .geosuggest__suggests {
      padding 0;

      &.geosuggest__suggests--hidden {
        display: none;
      }

      .geosuggest__item {
        list-style: none;
        padding: 8px 15px;
        cursor: pointer;

        &:hover {
          background: Color-Copper;
          color: #fff;
        }
      }
    }
  }
}


.form-group {
  .input-range {
    margin-top: 15px;
    margin-bottom: 33px;

    .input-range__slider {
      appearance: none;
      background: Color-Copper;
      border: 1px solid Color-Copper;

      &:focus {
        box-shadow: 0 0 0 5px rgba(194, 140, 88, 0.2);
      }
    }

    .input-range__track--active {
      background: Color-Copper;
    }

    .input-range__label-container {
      text-transform: capitalize;
    }

    .input-range__label--min {
      .input-range__label-container {
        left: 0;
      }
    }

    .input-range__label--max {
      .input-range__label-container {
        left: 0;
      }
    }
  }
}

