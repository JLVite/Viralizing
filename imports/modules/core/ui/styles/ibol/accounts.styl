.css-1pcexqc-container .css-bg1rzq-control {
  background-color: rgba(218,218,218,0.3);
  border-color: rgba(218,218,218,0.3);
}

.reviews {
  padding: 10px;
  .panel-body {
    overflow: scroll;
    padding: 30px 0px;
    height:425px;
  }

  .line {
    border: 1px solid;
    margin: 10px 0;
  }

  .part-of {
    display: flex;
    padding-bottom: 15px;
    align-items: center;

    div:first-child {
      display: block;
      text-align: center;
      justify-content: center;
      align-items: center;
      padding: 0;
      margin: 0px 30px 0px 30px;
    }
    .comment {
      background-color: white;
      padding: 10px 10px 10px 20px
      border-radius: .286rem;

      .dv-star-rating {
        margin: 0;
      }
    }
  }
}

