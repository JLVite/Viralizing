@import url('https://fonts.googleapis.com/css?family=Raleway:300,400,500&subset=latin-ext');

body {
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}

a {
  cursor: pointer;
}

.page {
  background: #fff;
}

.align-center {
  text-align: center;
}

.row {
  &.opposite-align {
    & > div {
      text-align: center

      &:first-child {
        text-align: left
      }

      &:last-child {
        text-align: right
      }
    }
  }
}

.spacer-15 {
  margin-bottom: 15px;
}

.spacer-20 {
  margin-bottom: 20px;
}

.spacer-30 {
  margin-bottom: 30px;
}

.cursor-pointer {
  cursor: pointer;
}

.site-menubar-unfold .site-menubar {
  overflow: auto;
}

.site-navbar .navbar-header .navbar-brand {
  width: 100%;
  text-align: center;

  img {
    height: 50px;
    margin-top: -13px;
  }
}

.content-padding-30 {
  padding: 30px;
}

.label-ibol {
  background: Color-Copper;
}

#saving {
  background: Color-Clear-Gray;
  border: 1px solid Color-Clear-Gray;
  position: fixed;
  right: 0;
  bottom: 0;
  padding: 10px 18px;
  opacity: 0;
  transition: 1.6s all ease-in-out;
  transition-delay: 1s;

  &.saving {
    opacity: 1;
  }
}

.loading-screen {
  display: table;
  width: 100%
  height: 100vh

  .content {
    vertical-align: middle;
    height: 100%
    width: 100%
    text-align: center
    display: table-cell
  }
}

@media (min-width: 768px)
  .site-menubar-fold .site-navbar .navbar-container{
    margin-left: 200px!important;
    }