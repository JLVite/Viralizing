.campaign-information {
  .header {
    position: relative;
    margin-bottom: 100px;

    .add {
      color: Color-Gray;
    }

    .cover {
      background: Color-Soft-Gray;
      height: 280px
      text-align: center;
      cursor: pointer;

      .back {
        background-size: cover !important;
        height: 100%;
        top: 0;
        left: 0;
        width: 100%;
        position: absolute;
        background-position: center !important;
      }

      .add {
        font-size: 55px;
        margin-top: 48px;

        &.hidden {
          display: none;
        }
      }
    }

    .profile {
      background: Color-Soft-Gray;
      width: 250px;
      position: absolute;
      height: 180px;
      bottom: -87px;
      left: 45px;
      text-align: center;
      cursor: pointer;
      box-shadow: 0 2px 5px 0 rgba(226, 226, 226, 0.50);

      .back {
        background-size: cover !important;
        height: 100%;
        top: 0;
        left: 0;
        width: 100%;
        position: absolute;
        background-position: center !important;
        background-repeat: no-repeat !important;
      }

      .add {
        font-size: 50px;
        margin-top: 50px;

        &.hidden {
          display: none;
        }
      }
    }

    .upload-progress {
      .progress-bar {
        background: Color-Soft-Gray;
        position: absolute;
        width: 100%;
        height: 100%;

        &.done {
          opacity: 0;
        }

        .bar {
          margin: 5px auto;
          font-size: 5px;
          position: absolute;
          left: 50%;
          top: 50%;
          margin-top: -40px;
          margin-left: -40px;
          text-indent: -9999em;
          border-top: 1.1em solid rgba(194, 140, 88, 0.2);
          border-right: 1.1em solid rgba(194, 140, 88, 0.2);
          border-bottom: 1.1em solid rgba(194, 140, 88, 0.2);
          border-left: 1.1em solid Color-Copper;
          -webkit-transform: translateZ(0);
          -ms-transform: translateZ(0);
          transform: translateZ(0);
          -webkit-animation: load8 1.1s infinite linear;
          animation: load8 1.1s infinite linear;
          -webkit-transition: opacity 0.7s;
          -moz-transition: opacity 0.7s;
          -ms-transition: opacity 0.7s;
          -o-transition: opacity 0.7s;
          transition: opacity 0.7s;
          transition-delay top 0.8s;

          &, &::after {
            border-radius: 50%;
            width: 80px !important;
            height: 80px;
          }
        }

        @-webkit-keyframes load8 {
          0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
          }
          100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
          }
        }
        @keyframes load8 {
          0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
          }
          100% {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
          }
        }
      }
    }

    .name {
      background: Color-White;
      position: absolute;
      right: 0;
      width: calc(100% - 320px);
      bottom: -100px;
    }
  }
}


.campaign-new-message {
