.campaign-edit-invite {

  .panel {
    .panel-body {
      padding: 20px;

      .form-group.no-margin {
        margin-bottom: 0;
      }
    }
  }

  .messages-list {
    height: 227px;
    overflow: auto;
    overflow-x: hidden;

    .message-item {
      padding: 10px;
      display: table;

      .selected {
        position: absolute;
        color: Color-Dark-Gray;
        background: #fff;
        z-index: 9;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        font-size: 23px;
        line-height: 34px;
        text-align: center;
        right: 12px;
        top: 4px;
        display: none;
      }

      &.active {
        .selected {
          display: block;
        }
      }

      .content {
        background: Color-Clear-Gray;
        margin: 0;
        display: table-cell;
        vertical-align: middle

        & > div {
          display: inline-block;
          vertical-align: middle;
        }

        .description {
          width: 66.666667%;
          padding: 15px;
          text-align: left;

          .message {
            font-size: 0.9em
          }

          .hashtags {
            font-size: 1em

            span {
              margin-right: 4px
            }
          }
        }

        .media {
          width: 33.333333%;
          margin: 0;

          .media-element {
            max-width: 100%;
            max-height: 100px;
            border: 7px solid #fff;
          }
        }
      }
    }

    .btn {
      display: block;
    }
  }


  .date-panel {
    .ibol-calendar {
      .Cal__Container__wrapper {
        .Cal__Container__listWrapper {
          .Cal__List__root {
            height: 175px !important;
          }
        }
      }
    }

    .date-controls {
      .time-zone {
        margin: 12px 0;
      }
    }
  }


  .panel {
    .message-item {
      .content {
        background: #fff;
      }
    }
  }

  .btn.save {
    margin-left: 10px
  }
}


