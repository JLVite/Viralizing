}


.invite-actions {
  h1 {
    margin-top: 5px;
    margin-bottom: 5px;
  }

  .controls {
    ul {
      list-style: none;

      li {
        display: inline-block;
        cursor: pointer;
        font-size: 1.3rem;
        height: 2.573rem;
        padding: 0.35rem 15px;
        margin-left: 10px;
      }
    }
  }

  .profile-list {

  }

  .panel {
    .panel-body {
      padding: 20px;
    }
  }

  .list-empty {
    height: 300px;
  }

  .social-select {
    margin-bottom: 4px;

    .Select-control {
      background: none !important;
      border: none !important;
    }

    .social-avatar {
      width: 50px;
      height: 50px;
      margin-right: 3px;
    }

    .Select-input {
      height: 50px;
      line-height: 50px;
    }

    .Select-multi-value-wrapper {
      position: relative;

      &::after {
        content: "+";
        position: absolute;
        float: right;
        width: 50px;
        height: 50px;
        right: -38px;
        top: 0px;
        z-index: 9;
        border-radius: 50%;
        background: #fff;
        color: Color-Gray;
        text-align: center;
        line-height: 50px;
        font-size: 55px;
        font-weight: 300;
        cursor: pointer;
      }
    }

    &.is-focused {
      .Select-multi-value-wrapper {
        &::after {
          display: none;
        }
      }
    }

    &.has-value {
      .Select-multi-value-wrapper {
        &::after {
          right: -50px;
          top: 2px;
        }
      }
    }
  }


  .action-form {
    .action-post {
      textarea {
        width: 100%;
        height: 173px;
        border: none;
        resize: none;
        background: #fff;
        margin-bottom: 10px;
        border-radius: 4px;
        padding: 20px;
        padding-right: calc(20% + 20px);
      }

      .media {
        width: 17%;
        position: absolute;
        right: 30px;
        top: 10px;
        padding: 10px;
        margin: 0;
        height: 155px;

        img {
          width: 100%;
          height: 130px;
        }
      }
    }

    .drop-zone {
      border: none;
      resize: none;
      background: #fff;
      text-align: center;
      font-size: 1.2em;
      margin-bottom: 10px;
      height: 250px;
      width: 98%;
      padding: 68px;
      opacity: 0.4;

      i {
        font-size: 2.2em;
        display: block;
        margin-bottom: 8px;
      }
    }

    .controls {
      padding: 0;
      margin: 0;

      li {
        list-style: none;
        display: inline-block;
        cursor: pointer;
        font-size: 24px;
        margin: 6px;
        color: Color-Dark-Gray;

        &:hover,
        &:focus,
        &.active {
          color: Color-Copper;
        }
      }
    }

    .upload-progress {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;

      .progress-bar {
        width: 100%;
        background: none !important;
        transition: 0.7s all ease-in-out;
        transition-delay: 0.7s;

        &.done {
          opacity: 0;
        }

        .bar {
          background: Color-Copper;
          transition: 0.7s all ease-in-out;
          height: 8px;
        }
      }
    }
  }


  .action-list {
    .list-group {
      margin-top: 20px;

      .list-group-item {
        background: #fff;
        margin-bottom: 15px;
        padding: 10px;

        .media-left {
          img {
            max-height: 85px;
            max-width: 150px;
          }
        }
      }
    }
  }
}

