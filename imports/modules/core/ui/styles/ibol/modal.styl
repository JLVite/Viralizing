@require 'variables.styl'

.ReactModal__Overlay {
  transition: all 500ms ease-in-out;
  transition-delay: 300ms;
  opacity: 0;
  z-index: 99;

  &.ReactModal__Overlay--after-open {
    opacity: 1;
  }

  &.ReactModal__Overlay--before-close {
    opacity: 0;
  }
}

.ReactModal__Content {
  transition: all 500ms ease-in-out;
  transform: translateY(-300px);
  opacity: 0;

  &.ReactModal__Content--after-open {
    opacity: 1;
    transform: translateY(0);
  }

  &.ReactModal__Content--before-close {
    opacity: 0;
    -webkit-animation: bounce 1s;
    -webkit-animation-iteration-count: 1;
  }
}

@-webkit-keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    -webkit-transform: translateY(0);
  }
  40% {
    -webkit-transform: translateY(-30px);
  }
  60% {
    -webkit-transform: translateY(-15px);
  }
}

.ReactModalPortal {
  & > div {
    z-index: 1500;
  }

  .app-modal {
    top: 40%;
    left: 50%;
    right: auto;
    bottom: auto;
    margin-right: -50%;
    transform: translate(-50%, -50%);
    background: #fff;
    position: absolute;
    text-align: center;
    padding: 30px;
    border: 3px solid Color-Soft-Gray;
    min-width: 800px;
    max-width: 90vw;
    max-height: 90vh;

    & > div {
      max-height: calc(90vh - 60px);
    }

    .close {
      background: Color-Soft-Gray;
      color: Color-Dark-Gray;
      opacity: 1;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      position: absolute;
      top: -20px;
      right: -20px;
      font-size: 28px;
      z-index: 99;
    }

    &.small {
      min-width: 600px;
    }

    &.large {
      min-width: 1100px;
    }

    &.xl-large {
      max-width: 1100px;
    }

    &.semifull-screen {
      max-width: initial;
      top: 20px;
      bottom: 20px;
      left: 20px;
      right: 20px;
      height: initial;
      max-height: initial;
      transform: none;
      margin: 0;
    }

    .scrollable-content {
      max-height: 80vh;
      overflow: auto;
    }

    .form-group {
      text-align: left;
    }
  }


  .full-app-modal {
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: #fff;
    position: absolute;
    text-align: center;
    padding: 30px;
    border: 3px solid Color-Soft-Gray;
    overflow auto;

    & > div {
      overflow auto;
    }

    .close {
      background: Color-Soft-Gray;
      color: Color-Dark-Gray;
      opacity: 1;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      position: absolute;
      top: -20px;
      right: -20px;
      font-size: 28px;
      z-index: 99;
    }

    &.small {
      min-width: 600px;
    }

    &.large {
      min-width: 1100px;
    }

    &.xl-large {
      max-width: 1100px;
    }

    &.semifull-screen {
      max-width: initial;
      top: 20px;
      bottom: 20px;
      left: 20px;
      right: 20px;
      height: initial;
      max-height: initial;
      transform: none;
      margin: 0;
    }

    .scrollable-content {
      max-height: 80vh;
      overflow: auto;
    }

    .form-group {
      text-align: left;
    }
  }


  .advertising-modal {
    position: absolute;
    right: 0;
    background: #fff;
    border-left: 3px solid Color-Soft-Gray;
    height: 100vh;
    overflow-y: auto;
    width: 700px;
    max-width: 100%;
    padding: 20px;
    transition: all 500ms ease-in-out;
    transform: translateX(900px) translateY(0);
    opacity: 0;

    &.ReactModal__Content--after-open {
      opacity: 1;
      transform: translateX(0);
    }

    &.ReactModal__Content--before-close {
      opacity: 0;
      transform: translateX(900px) translateY(0);
    }

    .close {
      background: Color-Soft-Gray;
      color: Color-Dark-Gray;
      opacity: 1;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      position: absolute;
      top: 20px;
      right: 20px;
      font-size: 28px;
      z-index: 99;
    }

    h1 {
      margin-top: 0;
    }

  }
}

.ReactModalPortal > div {
  opacity: 0;
}

.ReactModalPortal .ReactModal__Overlay {
  transition: opacity 200ms ease-in-out;
  background: rgba(0, 0, 0, 0.15);

  &--after-open {
    opacity: 1;
  }

  &--before-close {
    opacity: 0;
  }
}

.swal2-container.swal2-shown {
  background-color: rgba(255, 255, 255, 0.74902) !important;
  z-index: 9991;

  .swal2-modal {
    padding: 30px !important;
    border: 3px solid Color-Soft-Gray;
    border-radius: 0;
    width: 800px;
    max-width: 90vw;
  }
}

.ReactModal__Content {
  .loading-screen {
    position inherit;
    height: 300px;
  }
}
