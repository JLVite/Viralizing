@require 'ibol/variables.styl';

#auth {
  background: url("https://s3.amazonaws.com/ibol-app-media/login_back.jpeg");
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 100%;
  height: 100vh;
  display: table;
  color: #fff;
  text-align: center;

  input {
    color: #fff !important;
  }

  .overlay {
    background: rgba(67, 67, 67, 0.59);
    height: 100%;
    height: 100vh;
    display: table-cell;
    vertical-align: middle;


    .page-login {
      .appLogo {
        margin-bottom: 15px;

        img {
          height: 70px;
        }
      }

      img.avatar {
        width: 70px;
        margin-bottom 25px;
      }

      h2 {
        color: #fff;
        font-size: 20px;
        margin-top: 11px;
        margin-bottom: 11px;
      }

      .btn {
        margin-bottom 11px;
      }

      .footer {
        margin-top 20px;
      }
    }

    .page-login:before {
      background-image: url("../../images/login.jpg");
    }

    .page-login form {
      width: 340px;
      margin: 30px auto;
    }

    .page-login form a {
      margin-left: 10px;
      color: #C28C58;
    }

    .language {
      position fixed;
      top: 20px;
      right: 40px;

      a {
        color: #444;
        margin-left: 0;
      }

      .nav-item {
        display: inline-block;
        list-style: none;
      }
    }


    .socialShare {
      margin 5px;

      & > ul {
        padding: 0;

        & > li {
          cursor: pointer;
          margin: 5px 8px;
          list-style: none;
          display: inline-block;

          & > img {
            height: 40px;
          }
        }
      }
    }

    @media (max-width: 767px) {
      .page-login form {
        width: auto;
      }
    }

  }
}
